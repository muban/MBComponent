    <!--行星按钮-->
    <Transition
        app:constraintSetEnd="@+id/planet_end"
        app:constraintSetStart="@+id/planet_start"
        app:duration="500">
        <OnClick app:targetId="@+id/zero" />
    </Transition>

    <ConstraintSet android:id="@+id/planet_start">
        <Constraint
            android:id="@+id/zero"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/planet1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="0.0"
            app:layout_constraintBottom_toBottomOf="@id/zero"
            app:layout_constraintEnd_toEndOf="@id/zero"
            app:layout_constraintStart_toStartOf="@id/zero"
            app:layout_constraintTop_toTopOf="@id/zero" />
        <Constraint
            android:id="@+id/planet2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="0.0"
            app:layout_constraintBottom_toBottomOf="@id/zero"
            app:layout_constraintEnd_toEndOf="@id/zero"
            app:layout_constraintStart_toStartOf="@id/zero"
            app:layout_constraintTop_toTopOf="@id/zero" />
        <Constraint
            android:id="@+id/planet3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="0.0"
            app:layout_constraintBottom_toBottomOf="@id/zero"
            app:layout_constraintEnd_toEndOf="@id/zero"
            app:layout_constraintStart_toStartOf="@id/zero"
            app:layout_constraintTop_toTopOf="@id/zero" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/planet_end">
        <Constraint
            android:id="@+id/zero"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/planet1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:alpha="1.0"
            app:layout_constraintBottom_toTopOf="@id/zero"
            app:layout_constraintEnd_toEndOf="@id/zero"
            app:layout_constraintStart_toStartOf="@id/zero" />
        <Constraint
            android:id="@+id/planet2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:alpha="1.0"
            app:layout_constraintBottom_toTopOf="@id/planet1"
            app:layout_constraintEnd_toEndOf="@id/planet1"
            app:layout_constraintStart_toStartOf="@id/planet1" />
        <Constraint
            android:id="@+id/planet3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:alpha="1.0"
            app:layout_constraintBottom_toTopOf="@id/planet2"
            app:layout_constraintEnd_toEndOf="@id/planet2"
            app:layout_constraintStart_toStartOf="@id/planet2" />
    </ConstraintSet>
</MotionScene>